body {
    font-family: Arial, sans-serif;
}

header {
    background-color: #333;
    color: #fff;
    padding: 20px;
    text-align: center;
}

.container {
    margin: 20px auto;
    width: 50%;
}

form {
    width: 100%;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="text"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #0056b3;
}


/* Зафиксировать шапку при прокрутке */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000; /* Поместите шапку поверх остального содержимого */
}

/* Установить отступ для основного содержимого, чтобы избежать перекрытия */
.content {
    margin-top: 60px; /* Высота шапки */
}